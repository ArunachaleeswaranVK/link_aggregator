<p id="notice"><%= notice %></p>


<div class="container col-md-12 col-xs-6 well well-md" align="center">
  <p>
  <strong>Title:</strong>
  <%= @link.title %>
  </p>

  <p>
  <strong>Url:</strong>
  <%= @link.url %>
  </p>
  <div class="btn-group">
    <%= link_to likes_link_path(@link), method: :put , class: "btn btn-primary btn-md" do %>
            <span class="glyphicon glyphicon-chevron-up"></span>
            Upvote
            <%= @link.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_link_path(@link), method: :put , class: "btn btn-primary btn-md" do %>
            <span class="glyphicon glyphicon-chevron-down"></span>
            Downvote
          <%= @link.get_downvotes.size %>
    <% end %>
    <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-primary btn-md" %>
    <%= link_to 'Back', links_path, class: "btn btn-primary btn-md" %>
  </div>
  
</div>

<h3 class="comments_title">
    <%= @link.comments.count %> Comments
  </h3>
  <div id="comments">
    <%= render :partial => @link.comments %>
  </div>
  <%= simple_form_for [@link, Comment.new] do |f| %>
    <div class="field">
      <%= f.text_area :body, class: "form-contorl" %>
    </div>
    <br>
    <%= f.submit "Add comment" , class:"btn btn-primary" %>
    <% end %>
